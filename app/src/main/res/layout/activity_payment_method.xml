<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".paymentMethod"
    >

    <ImageView
        android:id="@+id/methodback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_navigate_before_black_24dp"
        android:layout_marginTop="10dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="METODE PEMBAYARAN"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:padding="15dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="65dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/mandirilogo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="10892037483920 \n \nA.N David Ferdinand Imanuel M"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="300dp"/>


    <Button
        android:id="@+id/methodbayar"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_bubble_chatdarkpink"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="105dp"
        android:text="Bayar Sekarang"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="*Silahkan mengirim bukti pembayaran ke email di bawah ini : \n david123@gmail.com"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:layout_marginTop="500dp"/>


</RelativeLayout>