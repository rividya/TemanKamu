<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cewebackground"
    tools:context=".First">
    
    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:background="@drawable/edit_bubble_chatdarkpink"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="Hai !! \nKenalin aku Teman Kamu \n\nPunya banyak pertanyaan tentang tubuh kamu, tapi ga berani tanya orang tua? Sini aku jelasin"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"/>


    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/edit_circle_chatdarkpink"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="30dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/darkPink"
        android:layout_marginTop="667dp"/>

    <ImageView
        android:id="@+id/firstchat1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/commentsolid"
        android:layout_marginTop="505dp"
        android:layout_marginLeft="55dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Ngobrol Yuk!"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/firstchat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="680dp"
        android:src="@drawable/comment"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/firstdokter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="680dp"
        android:src="@drawable/doctor"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/firstthread"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="680dp"
        android:src="@drawable/stickynote"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/firstnotif"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="680dp"
        android:src="@drawable/bell"
        android:clickable="true"
        />

</RelativeLayout>